<Window x:Class="HashCopier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HashCopier"
        mc:Ignorable="d"
        Title="HashCopier by Jackson Hu" Height="350" Width="525">
    <Grid>
        <Grid Margin="10,10,10,172.5">

            <TextBox HorizontalAlignment="Left" Height="24" Margin="118,18,0,0" TextWrapping="Wrap" Text="Not selected"
                     VerticalAlignment="Top" Width="372" />
            <TextBox HorizontalAlignment="Left" Height="24" Margin="118,56,0,0" TextWrapping="Wrap" Text="Not selected"
                     VerticalAlignment="Top" Width="372" />
            <Button Content="Copy" HorizontalAlignment="Left" Margin="279,90,0,0" VerticalAlignment="Top" Width="103"
                    Height="42" />
            <Button Content="Move" HorizontalAlignment="Left" Margin="387,90,0,0" VerticalAlignment="Top" Width="103"
                    Height="42" />
            <GroupBox Header="Action when duplicated" HorizontalAlignment="Left" Height="42" Margin="13,90,0,0"
                      VerticalAlignment="Top" Width="261">
                <Grid>
                    <RadioButton Content="Overwrite" Margin="0,3,162,0" />
                    <RadioButton Content="Skip" Margin="92,3,82,0" />
                    <RadioButton Content="Rename" Margin="172,3,0,0" />
                </Grid>
            </GroupBox>
            <Button Content="Source Path" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top"
                    Width="103" Height="25" />
            <Button Content="Dest Path" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top"
                    Width="103" Height="25" />

        </Grid>
        <ListView Margin="10,155,23,10.5" Name="FileList">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="350" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Status" Width="130">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Status}" TextDecorations="Underline"
                                           Foreground="{Binding StatusColor}" Cursor="Hand" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>